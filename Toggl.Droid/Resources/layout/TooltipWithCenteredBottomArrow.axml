<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/background_tooltip"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TooltipText"
                android:gravity="center"
                android:textColor="@color/tooltipText"
                android:paddingEnd="24dp"
                android:paddingStart="16dp"
                tools:text="Add a project and tags on the fly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/TooltipButton"
                android:visibility="gone"
                android:gravity="center"
                android:textColor="@color/tooltipText"
                android:clickable="true"
                android:focusable="true"
                android:paddingEnd="24dp"
                android:paddingStart="16dp"
                tools:text="Click here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            app:srcCompat="@drawable/shape_diamond"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="-6dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <ImageView
        app:srcCompat="@drawable/ic_close"
        android:tint="@color/tooltipText"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp" />
</FrameLayout>