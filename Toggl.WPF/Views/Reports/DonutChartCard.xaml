<UserControl x:Class="Toggl.WPF.Views.Reports.DonutChartCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Toggl.WPF.Views.Reports"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Effect>
        <DropShadowEffect Direction="270" Opacity="0.16"
                          BlurRadius="4" ShadowDepth="2" />
    </UserControl.Effect>
    <Grid 
        MinWidth="400"
        MaxWidth="400"
        Height="400"
        Margin="12"
        Background="{DynamicResource Toggl.CardBackground}">
        

        <Canvas 
            x:Name="DonutChart" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="380"
            Height="380"/>

    </Grid>
</UserControl>
