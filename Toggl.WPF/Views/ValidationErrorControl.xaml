<UserControl x:Class="Toggl.WPF.Views.ValidationErrorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Toggl.WPF.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="ValidationErrorContainer">
    <Grid>
        <Border Background="{StaticResource Toggl.ValidationErrorBackground}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="3"
                                  ShadowDepth="2"
                                  Direction="270"
                                  Opacity="0.2" />
            </Border.Effect>
            <TextBlock Style="{StaticResource Toggl.CaptionWhiteText}"
                       Text="{Binding ErrorText, ElementName=ValidationErrorContainer}"
                       Padding="8 3 5 8"/>
        </Border>
    </Grid>
</UserControl>
